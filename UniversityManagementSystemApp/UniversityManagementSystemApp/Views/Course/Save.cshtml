@using UniversityManagementSystemApp.Models;
@{
    Layout = "~/Views/Shared/_MyLayout.cshtml";
    List<Semester> semesters = ViewBag.Semester;
    List<Department> departments = ViewBag.Department;

}

                <div>
                    <div class="form-group">
                        <fieldset class="the-fieldset">
                            <legend class="the-legend">Save Course</legend>

                            <div>
                                @if (ViewBag.SuccessMessage != null)
                                {
                                    <div class="success-message">
                                        <span class="success-message">@ViewBag.SuccessMessage</span>
                                    </div>

                                }
                                @if (ViewBag.ErrorMessage != null)
                                {
                                    <div class="error-message">
                                        <span class="error-message">@ViewBag.ErrorMessage</span>
                                    </div>
                                }
                                
                                <form class="form-horizontal" id="form-department" method="POST">
                                    <div class="form-group">
                                        <label class="control-label col-sm-3" for="Code">Code:</label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control" id="Code" name="Code" placeholder="Enter Code">
                                        </div>
                                        <div class="3"></div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-3" for="Name">Name:</label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter Name">
                                        </div>
                                        <div class="3"></div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-3" for="Credit"> Credit:</label>
                                        <div class="col-sm-6">
                                            <input type="number" class="form-control" id="Credit" name="Credit" placeholder="Enter Credit" required="required">
                                        </div>
                                        <div class="3"></div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-3" for="Description">Description:</label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control" id="Description" name="Description" placeholder="Enter Description">
                                        </div>
                                        <div class="3"></div>
                                    </div>


                                    <div class="form-group">
                                        <label class="control-label col-sm-3" for="DepartmentId">Department:</label>
                                        <div class="col-sm-6">

                                            <select class="form-control" name="DepartmentId" id="DepartmentId">

                                                <option value="">--Select Department--</option>
                                                @foreach (var department in departments)
                                                {
                                                    <option value="@department.Id">@department.Name</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="3"></div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-sm-3" for="SemesterId">Semester:</label>
                                        <div class="col-sm-6">

                                            <select class="form-control" name="SemesterId" id="SemesterId">
                                                <option value="">--Select Semester--</option>
                                                @foreach (var semester in semesters)
                                                {
                                                    <option value="@semester.Id">@semester.Name</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="3"></div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-offset-3 col-sm-9">
                                            <button type="submit" class="btn btn-default">Save</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </fieldset>



                    </div>
                </div>

    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>





    <script>
        $(document).ready(function () {
            $("#form-department").validate({
                rules: {
                    Code: "required",
                    Name: "required",
                    Credit: {
                        min: 0.5,
                        max:5.0
                    },
                    Description: "required",
                    DepartmentId: "required",
                    SemesterId: "required"
                },
                messages: {
                    Code: "Please Provide Code",
                    Name: "Please provide Name",
                    Credit: "Credit couldn't be empty and must be 0.5 to 5.0",
                    Description: "Please Provide Description ",
                    DepartmentId: "Please Provide Department",
                    SemesterId: "Please Provide Semester",

                }
            });
        });

    </script>